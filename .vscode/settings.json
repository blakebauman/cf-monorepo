{
	// Editor settings
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit"
	},
	"editor.tabSize": 2,
	"editor.insertSpaces": false, // Use tabs as per project style

	// TypeScript settings
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.preferences.importModuleSpecifier": "relative",

	// File associations
	"files.associations": {
		"*.jsonc": "jsonc",
		"wrangler.jsonc": "jsonc"
	},

	// Exclude patterns
	"files.exclude": {
		"**/.turbo": true,
		"**/.wrangler": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/coverage": true
	},

	// Search exclude patterns
	"search.exclude": {
		"**/node_modules": true,
		"**/.turbo": true,
		"**/.wrangler": true,
		"**/dist": true,
		"**/coverage": true,
		"**/pnpm-lock.yaml": true
	},

	// File watcher exclude
	"files.watcherExclude": {
		"**/.turbo/**": true,
		"**/.wrangler/**": true,
		"**/node_modules/**": true,
		"**/dist/**": true,
		"**/coverage/**": true
	},

	// GitHub Actions settings - suppress action resolution warnings
	"github-actions.workflows.pinned.actions": {
		"actions/checkout": "v4",
		"pnpm/action-setup": "v4",
		"actions/setup-node": "v4"
	},
	"yaml.schemas": {
		"https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
	}
}
