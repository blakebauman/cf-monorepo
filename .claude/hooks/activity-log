#!/bin/bash
# Claude Code Notification Hook
# Development notifications and logging

NOTIFICATION_TYPE="$1"
MESSAGE="$2"

# Log all notifications to a development log
LOG_FILE=".claude/dev.log"
TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')

echo "[$TIMESTAMP] $NOTIFICATION_TYPE: $MESSAGE" >> "$LOG_FILE"

# Handle specific notification types
case "$NOTIFICATION_TYPE" in
    "error")
        echo "üö® Error: $MESSAGE"
        ;;
    "warning") 
        echo "‚ö†Ô∏è  Warning: $MESSAGE"
        ;;
    "info")
        echo "‚ÑπÔ∏è  Info: $MESSAGE"
        ;;
    *)
        echo "üìù $MESSAGE"
        ;;
esac

exit 0