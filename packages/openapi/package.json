	},
	"dependencies": {
		"@repo/errors": "workspace:*",
		"@repo/types": "workspace:*",
		"@hono/zod-openapi": "^1.1.5",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"typescript": "^5.3.3",
		"vitest": "^3.2.4"
	}
