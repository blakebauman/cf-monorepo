{
	"name": "{{name}}",
	"main": "src/index.ts",
	"compatibility_date": "2024-09-23",
	"compatibility_flags": ["nodejs_compat"],
	"vars": {
		"BETTER_AUTH_URL": "https://{{name}}.your-subdomain.workers.dev",
		"ENVIRONMENT": "development"
	}{{#if useDatabase}},
	"hyperdrive": [
		{
			"binding": "HYPERDRIVE",
			"id": "your-hyperdrive-id"
		}
	]{{/if}}
