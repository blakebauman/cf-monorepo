{
	"name": "{{name}}",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy",
		"build": "tsc --noEmit",
		"type-check": "tsc --noEmit",
		"types": "wrangler types",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src",
		"format": "biome format --write ./src",
		"check": "biome check ./src",
		"test": "vitest run",
		"clean": "rm -rf .turbo .wrangler node_modules"
	},
	"dependencies": {
		"@repo/types": "workspace:*",
		"@repo/utils": "workspace:*"{{#if useHono}},
		"hono": "^4.10.7"{{/if}}{{#if useMiddleware}},
		"@repo/middleware": "workspace:*"{{/if}}{{#if useOpenAPI}},
		"@repo/openapi": "workspace:*",
		"@hono/zod-openapi": "^1.1.5",
		"@scalar/hono-api-reference": "^0.9.25",
		"zod": "^4.1.13"{{/if}}{{#if useDatabase}},
		"@repo/db": "workspace:*",
		"drizzle-orm": "^0.44.7"{{/if}}{{#if useAuth}},
		"@repo/auth": "workspace:*"{{/if}}
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240208.0",
		"@cloudflare/vitest-pool-workers": "^0.5.0",
		"@types/node": "^20.11.0",
		"typescript": "^5.3.3",
		"vitest": "^3.2.4",
		"wrangler": "^4.51.0"
	}
}

